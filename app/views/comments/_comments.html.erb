<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class='card-body text-bg-light p-3 border border-secondary'>
    <p><strong><%= comment.username %></strong>: <%= comment.body %>
    <%= link_to '[X]', [comment.post, comment],
    method: :delete,
    data: {confirm: 'Are you sure?'} %></p>
  </div>
<%end%>